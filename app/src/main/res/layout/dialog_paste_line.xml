<?xml version="1.0" encoding="utf-8"?>
<com.ubergeek42.WeechatAndroid.copypaste.FancyViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground" >

    <!-- like copy, but without background -->
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dialog_item_padding_vertical"
        android:paddingTop="@dimen/dialog_item_padding_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:singleLine="false"
        android:minHeight="?attr/listPreferredItemHeightSmall"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textColor="?attr/textColorAlertDialogListItem"
        android:gravity="center_vertical"
        android:paddingLeft="?attr/listPreferredItemPaddingLeft"
        android:paddingRight="?attr/listPreferredItemPaddingRight"
        android:background="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- like copy, but without background and smaller right padding -->
        <TextView
            android:id="@+id/text2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dialog_item_padding_vertical"
            android:paddingTop="@dimen/dialog_item_padding_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:singleLine="false"
            android:minHeight="?attr/listPreferredItemHeightSmall"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:textColor="?attr/textColorAlertDialogListItem"
            android:gravity="center_vertical"
            android:paddingLeft="?attr/listPreferredItemPaddingLeft"
            android:paddingRight="@dimen/paste_dialog_text_with_image_text_margin_right"
            android:background="@null" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/paste_dialog_image_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/paste_dialog_image_margin_left"
            android:layout_marginRight="@dimen/paste_dialog_image_margin_right"
            android:layout_marginVertical="@dimen/paste_dialog_image_half_vertical_margin"
            android:contentDescription="@null" />
    </LinearLayout>
</com.ubergeek42.WeechatAndroid.copypaste.FancyViewSwitcher>